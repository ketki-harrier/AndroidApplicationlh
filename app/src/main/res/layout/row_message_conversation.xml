<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/conversationImage"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:src="@drawable/default_avatar"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorPrimary"
        app:civ_shadow_radius="10"/>

    <TextView
        android:id="@+id/conversationTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra__extra_large"
        android:layout_toEndOf="@+id/conversationImage"
        android:layout_toRightOf="@+id/conversationImage"
        android:text="@string/action_settings"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/conversationMessageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversationTitleTv"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_toEndOf="@+id/conversationImage"
        android:layout_toRightOf="@+id/conversationImage"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/appbar_scrolling_view_behavior"
        android:textColor="@color/text_color_grey"/>

    <TextView
        android:id="@+id/conversationDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/conversationMessageTv"
        android:layout_marginTop="@dimen/margin_extra__extra_large"
        android:text="06:08 PM 2017-01-16"
        android:textColor="@color/text_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/conversationDateTv"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/light_gray"/>
</RelativeLayout>