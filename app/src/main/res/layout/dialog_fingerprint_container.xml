<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_padding_10"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/dialog_fingerprint_register"/>
    </FrameLayout>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/margin_padding_10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/margin_padding_5"
        android:background="@android:color/transparent"
        android:text="@string/fingerprint_cancel_btn"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"/>
</LinearLayout>